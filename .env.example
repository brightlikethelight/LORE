# LORE Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# API Keys for Frontier Models
# =============================================================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# OpenAI (GPT-4)
OPENAI_API_KEY=sk-your-key-here

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# vLLM Configuration (for open-weight models)
# =============================================================================

# vLLM server URL (if running locally or on a cluster)
VLLM_BASE_URL=http://localhost:8000

# API key for vLLM (if authentication enabled)
VLLM_API_KEY=EMPTY

# =============================================================================
# Experiment Tracking
# =============================================================================

# Weights & Biases
WANDB_API_KEY=your-wandb-api-key
WANDB_PROJECT=lore-optimization
WANDB_ENTITY=your-username-or-team

# =============================================================================
# HuggingFace (for dataset access)
# =============================================================================

# HuggingFace token (needed for gated datasets)
HF_TOKEN=hf_your-token-here

# Cache directory for HuggingFace datasets
HF_HOME=./data/hf_cache

# =============================================================================
# Sandbox Configuration
# =============================================================================

# Docker socket path (for sandbox isolation)
DOCKER_HOST=unix:///var/run/docker.sock

# Sandbox image name
LORE_SANDBOX_IMAGE=lore-sandbox:latest

# =============================================================================
# Resource Limits
# =============================================================================

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=50

# Request timeout in seconds
REQUEST_TIMEOUT=120

# Rate limit buffer (use X% of rate limit)
RATE_LIMIT_BUFFER=0.9

# =============================================================================
# Logging
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log directory
LOG_DIR=./logs

# =============================================================================
# Results Storage
# =============================================================================

# Base directory for experiment results
RESULTS_DIR=./results

# Enable result compression
COMPRESS_RESULTS=true
